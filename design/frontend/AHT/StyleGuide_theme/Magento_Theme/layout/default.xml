<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <referenceContainer name="page.wrapper"> </referenceContainer>
            <!-- Top-panel -->
            <referenceBlock name="header.panel.wrapper" remove="true"/>
            <!-- End Top-panel -->

            <!-- Menu -->
            <referenceBlock name="navigation.sections" remove="true" />
            <!-- End Menu -->
            
        <referenceContainer name="main.content">
            <block name="our.blog" class="Magento\Framework\View\Element\Template" template="Magento_Theme::alert.phtml" />
            <block name="numberformbutton.phtml" class="Magento\Framework\View\Element\Template" template="Magento_Theme::numberformbutton.phtml" />
        </referenceContainer>
    </body>
</page>
